{
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": [
        "svelte3"
    ],
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": [
                "**/*.svelte"
            ],
            "processor": "svelte3/svelte3"
        }
    ],
    "rules": {
        "indent": ["error", 4],
        "arrow-parens": "off"
    },
    "ignorePatterns": ["*.json", "*.html", "yarn*", "README.md", "static/**", "__sapper__/**", "src/node_modules/**"]
}